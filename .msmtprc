# msmtp configuration for Gmail

# Default settings
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/cert.pem
logfile        ~/.msmtp.log

# Gmail account
account        gmail
host           smtp.gmail.com
port           587
from           info@nvc.sg
user           info@nvc.sg
passwordeval   "security find-internet-password -w -a info@nvc.sg -s msmtp-gmail 2>/dev/null"

# Set default account
account default : gmail
